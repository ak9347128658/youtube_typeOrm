{
   "compilerOptions": {
      "target": "es2018",
      "module": "commonjs",
      "lib": ["ES2018"],
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true
   },
   "include": ["src/**/*"],
   "exclude": ["node_modules","dist"]
}